# Git LFS tracking
dotter* filter=lfs diff=lfs merge=lfs -text

# Windows line endings
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Unix line endings
*.sh text eol=lf

# Common config files - use LF for cross-platform compatibility
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf

# SSH config files - use LF
ssh/config text eol=lf
